{
  "appId": "com.outil.mailing",
  "productName": "Outil Mailing",
  "directories": {
    "output": "release"
  },
  "files": [
    "front/dist/**/*",
    "back/**/*",
    "main.cjs",
    "preload.cjs",
    "logo_app.png",
    "logo_app.icns",
    "package.json",
    "entitlements.mac.plist"
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "icon": "logo_app.icns",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "entitlements.mac.plist",
    "entitlementsInherit": "entitlements.mac.plist",
    "signingIdentity": null,
    "certificateFile": null,
    "certificatePassword": null,
    "minimumSystemVersion": "10.13"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220,
        "type": "file"
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "Outil Mailing Installer",
    "background": null,
    "window": {
      "width": 540,
      "height": 450
    }
  },
  "win": {
    "target": "nsis",
    "icon": "logo_app.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
