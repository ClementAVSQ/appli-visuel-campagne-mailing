{
  "name": "outil_mailing",
  "version": "1.0.0",
  "private": true,
  "description": "Application Desktop Mailing avec Electron et Vue",
  "author": "",
  "license": "ISC",
  
  "main": "main.cjs",
  
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm --prefix front run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm --prefix front run build && electron-builder"
  },

  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "multer": "^2.0.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.24",
    "vue-data-ui": "^3.7.16",
    "vue-router": "^4.6.3"
  },

  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^8.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.6.0",
    "vite": "^7.2.4",
    "wait-on": "^7.0.2"
  },

  "build": {
    "appId": "com.outil.mailing",
    "productName": "Outil Mailing",
    "directories": {
      "output": "release"
    },
    "files": [
      "front/dist/**/*",
      "back/**/*",
      "main.cjs",
      "preload.cjs",
      "logo_app.png",
      "logo_app.icns",
      "package.json",
      "entitlements.mac.plist"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "logo_app.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "signingIdentity": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "logo_app.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
